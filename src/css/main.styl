body
  margin 0
  padding 0
  min-height 100vh
  min-height 100svh
  display flex
  justify-content center
  align-items center
  background-image url("/img/background.png")
  font-family 'Courier New'

@font-face
  font-family: 'modelista';
  src: url('/fonts/modelista-signature.woff2') format('woff2'),
       url('/fonts/modelista-signature.woff') format('woff'),
       url('/fonts/modelista-signature.otf') format('opentype');
  font-weight: 400;
  font-style: normal;
  font-display: swap;

#container
  perspective 1000px

#container.reversed #card
  transform rotateX(180deg) scale(1.2)
  box-shadow 6px -16px 18px rgba(0, 0, 0, 0.6)
  border-top 2px solid rgba(0, 0, 0, 0.4)
  border-bottom 2px solid rgba(256, 256, 256, 0.8)

#card
  box-shadow 4px 8px 12px rgba(0, 0, 0, 0.6)
  border-top 2px solid rgba(256, 256, 256, 0.8)
  border-left 1px solid rgba(256, 256, 256, 0.8)
  border-right 1px solid rgba(0, 0, 0, 0.4)
  border-bottom 2px solid rgba(0, 0, 0, 0.4)
  border-radius 4px

  h1
    font-family "modelista", cursive
    font-size 45px
    margin 30px 0px 0px 0px

    // Apply different stylistic sets so letters vary between the 2 words
    .g1, .g2
      display inline-block

    .g1
      font-feature-settings "ss01" 1

    .g2
      font-feature-settings "ss02" 1

  position relative
  &.ready
    transition transform 1s ease-in-out, box-shadow 1s ease-in-out, border-top-color 1s ease-in-out, border-bottom-color 1s ease-in-out
  will-change transform
  transform-style preserve-3d
  background-image url("/img/paper.png")

  p
    margin 0

  h1, p
    opacity 0.7

#card, #front, #back
  width 315px
  height 180px

#front, #back
  top 0
  left 0
  position absolute

#front
  z-index 2
  cursor pointer
  text-align  center
  transform rotateX(0deg)
  backface-visibility hidden

  &:focus-visible
    outline 2px solid rgba(0, 0, 0, 0.6)
    outline-offset 4px

  a
    color inherit
    text-decoration none

#back
  margin auto
  transform rotateX(180deg)
  backface-visibility hidden

  a
    position absolute

#vcard
  height 120px
  width 120px

@media (prefers-reduced-motion: reduce)
  #card.ready
    transition none